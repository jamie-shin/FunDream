<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.IMemberDao">

	<sql id="updateColumn">
		<if test="m_pwd != null">
			m_pwd=sha(#{m_pwd})
		</if>
		<if test="m_nick != null">
			, m_nick=#{m_nick}
		</if>
		<if test="m_img != null">
			, m_img=#{m_img}
		</if>
		<if test="m_phone != null">
			, m_phone=#{m_phone}
		</if>
		<if test="m_manager != 0">
			, m_manager=#{m_manager}
		</if>
		<if test="m_valid != 0">
			, m_valid=#{m_valid}
		</if>
	</sql>
	
	<insert id="insertMember" parameterType="member" useGeneratedKeys="true" keyProperty="m_id">
		insert into Member values(default, #{m_email}, sha(#{m_pwd}), #{m_name}, #{m_img}, #{m_nick}, #{m_phone}, #{m_gender}, #{m_birth}, #{m_manager}, #{m_valid})
	</insert>
	
	<select id="selectAllMember" resultType="member">
		select * from Member
	</select>
	
	<select id="selectOneMemberById" resultType="member" parameterType="int">
		select * from Member where m_id=#{m_id}
	</select>

	<select id="selectOneMemberByEmail" resultType="member" parameterType="String">
		select * from Member where m_email=#{m_email}
	</select>
	
	<update id="updateMember" parameterType="member">
		update Member set <include refid="updateColumn"/> where m_id=#{m_id}
	</update>
	
	<delete id="deleteMember" parameterType="int">
		delete from Member where m_id=#{m_id}
	</delete>

</mapper>